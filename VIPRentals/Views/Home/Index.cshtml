@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">VIP <span style="color:#33E1ED;">Rentals Service</span></h1>


    <section class="jumbotron d-flex align-items-center">
        <div class="container">
            <div class="row">
                <!-- Image Column -->
                <div class="col-md-6">
                    <img src="~/images/car-image.png" class="img-fluid" alt="Car Image">
                </div>
                <!-- Text Column -->
                <div class="col-md-6">
                    
                    <p class="lead">Find the perfect vehicle for your needs.</p>
                    <hr class="my-4">
                    <p>Discover the extensive selection of vehicles at your disposal, ready to be rented to cater to your specific needs and preferences. With a diverse range of options available, you can explore various makes and models suited for any occasion or journey.</p>
                    <a class="btn btn-primary btn-lg" href="#" role="button">Get Started</a>
                    <hr class="my-4">
                </div>
            </div>
        </div>
    </section>


    <div class="container px-md-5 py-md-5">
        <h3 class="display-8 p-3">Features</h3>
        <div class="row features">
            <div class="col-md-4">
                <!-- Image Placeholder -->
                <img src="~/images/rent-car.png" class="img-fluid mb-3" alt="Car Image 1">
                <h5>Rent with Ease</h5>
                <p>Choose from our selection of cars for rent. Whether you need a compact car for city driving or an SUV for a family trip, we've got you covered.</p>
            </div>
            <div class="col-md-4">
                <!-- Image Placeholder -->
                <img src="~/images/variety-car.png" class="img-fluid mb-3" alt="Motorcycle Image">
                <h5>Variety of Vehicles</h5>
                <p>Experience the freedom of the open road with our motorcycle rentals. We offer a variety of vehicles for different riding preferences.</p>
            </div>
            <div class="col-md-4">
                <!-- Image Placeholder -->
                <img src="~/images/trusted.png" class="img-fluid mb-3" alt="Car Image 2">
                <h5>Cheap Rentals</h5>
                <p>We are a trusted rental service which holds the title of cheap and affordable rent-a-vehicle service.</p>
            </div>
        </div>
    </div>

    <hr class="my-4">
</div>
